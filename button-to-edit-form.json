{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/column-formatting.schema.json",
  "debugMode": true,
  "elmType": "div",
  "style": {
    "display": "block",
    "margin": "10px 0"
  },
  "children": [
    {
      "elmType": "a",
      "txtContent": "Edit",
      "attributes": {
        "target": "_blank",
        "href": "='https://[your tenant].sharepoint.com/sites/[your site]/Lists/[your list]/EditForm.aspx?ID=' + [$ID]"
      },
      "style": {
        "display": "block",
        "padding": "4px",
        "margin": "4px",
        "clear": "both",
        "border-radius": "3px",
        "background-color": "#0078D4",
        "text-decoration": "none",
        "color": "#ffffff",
        "text-align": "center",
        "width": "60px"
      }
    }
  ]
}
